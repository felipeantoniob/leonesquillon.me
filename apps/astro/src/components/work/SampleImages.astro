---
import { Image } from "astro:assets";

interface Props {
  sampleImages: ImageMetadata[];
}

const { sampleImages } = Astro.props;
---

<div class="flex flex-col gap-8 lg:gap-10">
  {
    sampleImages.map((sampleImage) => (
      <Image
        src={sampleImage}
        alt="sample image"
        class="w-full object-contain"
      />
    ))
  }
</div>
