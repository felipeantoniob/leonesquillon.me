---
import "@fontsource/lora";
import "@fontsource/lora/400-italic.css";
import "@fontsource/work-sans";
import "@fontsource/work-sans/500.css";
import "@fontsource/work-sans/600.css";
import "@fontsource/work-sans/700.css";

import loraWoff2 from "@fontsource/lora/files/lora-latin-400-normal.woff2?url";
import workSansWoff2 from "@fontsource/work-sans/files/work-sans-latin-400-normal.woff2?url";

import "~/styles/globals.css";

import { ViewTransitions } from "astro:transitions";
import ClientRouter from "astro/components/ClientRouter.astro";

import Frame from "~/components/common/Frame";
import CursorHighlight from "~/components/CursorHighlight";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Leon Esquillon - UI/UX Designer. Crafting intuitive and user-centered digital experiences. Check out my portfolio showcasing my design work."
    />
    <meta name="author" content="Leon Esquillon" />
    <meta
      name="keywords"
      content="UI Design, UX Design, User Interface, User Experience, Web Design, Portfolio, Frontend Design, Interaction Design"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={loraWoff2}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={workSansWoff2}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Leon Esquillon</title>
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Leon Esquillon" />
    <link rel="manifest" href="/site.webmanifest" />
    <ClientRouter />
  </head>
  <body class="dark bg-background lg:overflow-hidden">
    <Frame client:only />
    <CursorHighlight client:load />
    <div
      class="mx-auto flex min-h-screen max-w-screen-2xl flex-col lg:flex-row"
    >
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
